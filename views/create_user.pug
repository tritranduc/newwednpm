extends layout


block content
    if(errors)
        each error in errors
            .alert.alert-info= error
    form(action='/users/create', method='post')
        label(for="name") name:
        input#name(type='text', name='name',value=values ? values.name : "")
        br
        br
        label(for="email") email:
        input#email(type='text', name='email',value=values ? values.email : "")
        br
        br
        label(for="password") password:
        input#password(type='password', name='password',value=values ? values.password : "")
        br
        br
        label(for="phonenumber") phonenumber:
        input#phonenumber(type='number', name='phone',value=values ? values.phone : "")
        br
        br
        input(type='submit')
